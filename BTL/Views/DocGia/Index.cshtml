@model IEnumerable<BTL.Models.DocGia>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách độc giả</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchDG">
            <label>Tìm kiếm</label>
            <input name="txtSearch" placeholder="Nhập từ khóa" />
            <input type="submit" value="Tìm" />
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocGiaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenDocGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocGiaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDocGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DocGiaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DocGiaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DocGiaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
