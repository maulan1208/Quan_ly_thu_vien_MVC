@model IEnumerable<BTL.Models.TheLoai>

@{
    ViewData["Title"] = "Index";
}

<h1>Thể loại</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchTL">
            <label>Tìm kiếm</label>
            <input name="txtSearch" placeholder="Nhập từ khóa" />
            <input type="submit" value="Tìm" />
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TheLoaiID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenTheLoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TheLoaiID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTheLoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TheLoaiID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TheLoaiID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TheLoaiID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
