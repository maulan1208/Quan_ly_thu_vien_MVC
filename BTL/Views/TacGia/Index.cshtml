@model IEnumerable<BTL.Models.TacGia>

@{
    ViewData["Title"] = "Index";
}

<h1>Tác giả</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchTG">
            <label>Tìm kiếm</label>
            <input name="txtSearch" placeholder="Nhập từ khóa" />
            <input type="submit" value="Tìm" />
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TacGiaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenTacGia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TacGiaID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTacGia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TacGiaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TacGiaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TacGiaID">Delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
